<div class="row">
    <% @events.each do |event|%>
        <div class="col-xs-3">
            <div class="box">
                <h1><%= link_to event.name, event%></h1>
                <div class="field">
                    <%= image_tag event.cover.url(:thumb)%>
                </div>
                <div class="field">
                    <%= event.id  %> 
                </div>
                <div class="field">
                    <%= event.organizer%> - <%= link_to "Register", usevents_path(event_id: event.id) , method: :post %> 
                    - 
                    <% if event.may_publish?%>
                    <%= link_to "Publish","/events/#{event.id}/publish", class:"blue", method: :put%>
                    <%end%>
                </div>
            </div>
        </div>              
    <%end%>
</div>   