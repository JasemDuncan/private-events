<p id="notice"><%= notice %></p>

<h1 style="color: <%= @category.color%>; "><%= @category.name %></h1>
<h2><%= @category.events.count %> Events </h2>

  <% @category.events.each do |event| %>
    <h3><%= link_to event.name,event%></h3>
       <%= image_tag event.cover.url(:thumb)%>
    <div>
      <%= event.description %> - <%= link_to "Delete", event, class: "red", method: :delete %>
    </div>
  <% end %>


<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
